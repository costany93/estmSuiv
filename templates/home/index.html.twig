{% extends 'base.html.twig' %}

{% block title %}Acceuil - Estm Suivi{% endblock %}

{% block body %}
    <div class="container">
        <h3 class="text-center mt-2">Les dernières actualités</h3>
        <div class="row">
            {% for information in informations %}
                <div class="col-md-4">
                    {% include "shared/_card.html.twig" with {'cardText': information.content} %}
                </div>
            {% endfor %}
            
        </div>
        <hr>
        <h3 class="text-center mt-2">Les dernières images</h3>
        <div class="row mt-5">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100" src="https://www.estm.sn/storage/actualites/nc9DnxJEZ0G0HE8ejJxyOZUyew3ZLM9uOlnqoRUG.png" alt="First slide">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('build/images/logo.png')}}" alt="Second slide">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="{{asset('build/images/logo.png')}}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            </div>
        </div>

        <hr>
        <h3 class="text-center mt-5">Récentes activités</h3>
        <div class="row mt-2">
            <div class="col-md-4">
                {% include "shared/_card.html.twig" with {cardText: 'Le club scientifique organise un atelier sur l\'initiation au langage python'} %}
            </div>
            <div class="col-md-4">
                {% include "shared/_card.html.twig" with {cardText: 'Le club scientifique organise un atelier sur l\'initiation au langage python'} %}
            </div>
            <div class="col-md-4">
                {% include "shared/_card.html.twig" with {cardText: 'Le club scientifique organise un atelier sur l\'initiation au langage python'} %}
            </div>
        </div>
    </div>
{% endblock %}
